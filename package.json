{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "start": "sirv public --single",
    "clean": "rm -rf public/build",
    "rollup-build": "rollup -c",

    "sources": "git push origin sources",
    "postsources": "git checkout master",
    "prepages": "npm run clean && npm run rollup-build",
    "pages": "git add -A && gh-pages -d public -b master",
    "postpages": "npm run clean && git checkout sources",

    "deploy": "npm run sources && npm run pages",

    "dev": "rollup -c -w"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "gh-pages": "^2.2.0",
    "rollup": "^1.20.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "sass": "^1.26.5",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^3.7.4"
  },
  "dependencies": {
    "sirv-cli": "^0.4.4"
  }
}
